<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_yellow"
    tools:context=".signupFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:alpha="0.8"
        android:background="@color/BG_white_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etRetypePassword"
        android:layout_width="336dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:ems="8"
        android:hint="Re-type your password"
        android:inputType="textPassword"
        android:textColor="@color/BG_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        app:passwordToggleEnabled="true"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="336dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:ems="8"
        android:hint="Type your password"
        android:inputType="textPassword"
        android:textColor="@color/BG_black"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        app:passwordToggleEnabled="true"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="128dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/better_life_logo" />

    <TextView
        android:id="@+id/tvSignupDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="SIGNUP TO CONTINUE"
        android:textColor="@color/BG_black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="336dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter your email here"
        android:inputType="textPersonName"
        android:textColor="@color/BG_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSignupDisplay"
        app:layout_constraintVertical_bias="0.029"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btSignup"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/BG_black"
        android:text="Signup"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRetypePassword"
        app:rippleColor="@color/BG_black" />

    <TextView
        android:id="@+id/tvDontHaveAccount"
        android:layout_width="336dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="Already have an account?"
        android:textColor="@color/BG_black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSignup" />

    <TextView
        android:id="@+id/tvSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/BG_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvDontHaveAccount"
        app:layout_constraintTop_toBottomOf="@+id/tvDontHaveAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>