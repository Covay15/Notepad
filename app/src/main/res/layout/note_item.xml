<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/note_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BG_brown_sat"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/rvTitle"
            android:layout_width="195dp"
            android:layout_height="42dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/BG_black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rvPlaceHolder"
            app:layout_constraintTop_toBottomOf="@+id/rvDate" />

        <TextView
            android:id="@+id/rvDescription"
            android:layout_width="195dp"
            android:layout_height="42dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="3dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/BG_black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rvTitle"
            app:layout_constraintTop_toBottomOf="@+id/rvTitle" />

        <ImageView
            android:id="@+id/rvPlaceHolder"
            android:layout_width="108dp"
            android:layout_height="118dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notepad" />

        <TextView
            android:id="@+id/rvDate"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/rvTitle"
            app:layout_constraintStart_toEndOf="@+id/rvPlaceHolder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.307" />

        <TextView
            android:id="@+id/rvCategory"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/rvPlaceHolder"
            app:layout_constraintTop_toBottomOf="@+id/rvDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>